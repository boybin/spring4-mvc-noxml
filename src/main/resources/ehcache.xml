<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="http://ehcache.org/ehcache.xsd"
  updateCheck="false">

  <diskStore path="java.io.tmpdir" />

  <!-- Default Cache Configuration, with name 'default' -->
  <defaultCache maxElementsInMemory="4096" eternal="true"
    timeToIdleSeconds="300" timeToLiveSeconds="1200" overflowToDisk="false"
    memoryStoreEvictionPolicy="LRU" />

  <cache name="spec" maxElementsInMemory="16384" eternal="true"
    timeToIdleSeconds="300" timeToLiveSeconds="1200" overflowToDisk="false"
    memoryStoreEvictionPolicy="LRU" />

  <cache name="test" maxElementsInMemory="16384" eternal="false"
    timeToIdleSeconds="30" timeToLiveSeconds="120" overflowToDisk="false"
    memoryStoreEvictionPolicy="LRU" />

  <cache name="service" maxElementsInMemory="16384" eternal="true"
    timeToIdleSeconds="300" timeToLiveSeconds="1200" overflowToDisk="false"
    memoryStoreEvictionPolicy="LRU" />

</ehcache>
